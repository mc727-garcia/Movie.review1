// Attempt at a project written in Java
import java.util.Scanner; 
import java.util.*;


public class Main{
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in); 
        Login(input); 
        int choice; 
        int option = 0; 
        while (option != 4){
        option = 4; 
		System.out.println("Welcome! What would you like to complete today?");
		System.out.println("1. Check review and rating history");
		System.out.println("2. Create a new rating for a movie");
		System.out.println("3. Create a new rating for a show");
		System.out.println("4. Exit");
		choice = input.nextInt();
		input.nextLine(); 
		switch (choice){
		    case 1:  
		        review_history(input); 
		        break; 
		    case 2:
		        new_review_movie(input); 
		        break; 
            case 3: 
                new_review_show(input); 
                break; 
            case 4: 
                System.out.println("Goodbye.");
                break; 
            default: 
                System.out.println("Invalid entry. Goodbye");
                break; 
		}
        }
	}
